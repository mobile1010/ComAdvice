<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nawarin.comadvice.ShowActivity"
    android:background="@color/highlighted_text_material_dark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:id="@+id/resultPic"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@android:drawable/presence_offline"
                android:background="#ffffff" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linears1"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/resultPic"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="สรุปอาการ"
                    android:id="@+id/textView3"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/txtSymtom"
                    android:layout_gravity="left"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:background="#ffffff"
                    android:textColor="#4b4a4a" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linears2"
                android:layout_below="@+id/linears1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="แนะนำทางแก้"
                    android:id="@+id/textView5"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/txtSug"
                    android:layout_gravity="left"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:background="#ffffff"
                    android:textColor="#4b4a4a" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
